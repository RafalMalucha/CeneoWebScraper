{% extends "base.html.jinja" %}
{% block content %}
    <h2>Extract opinions about product</h2>
    <form action="{{url_for('extract')}}" method="POST">
    <div class="row g-3 align-items-center">
        <div class="col-auto">
            <label for="product_id" class="col-form-label">Product ID</label>
        </div>
        <div class="col-auto">
            <input type="text" id="product_id" name="product_id" class="form-control">
        </div>
        <div class="col-auto">
            <input type="submit", class="btn btn-outline-secondary" value="Download">
        </div>
    </div>
    </form>
{% endblock content %}